extends base

block append head
  script(src='/js/resetPasswordEvents.js', defer, type='module') 
  style(type='text/css').
    .form__input {
      display: block;
      font-family: inherit;
      font-size: 1.5rem;
      color: inherit;
      padding: 1.25rem 1.75rem;
      border: none;
      width: 100%;
      background-color: #fff;
      background-color: #f2f2f2;
      border-top: 3px solid transparent;
      border-bottom: 3px solid transparent;
      -webkit-transition: all 0.3s;
      transition: all 0.3s;
      border-radius: 4px;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      /* Pseudo element (a visible thing that isn't really in the DOM).
            Also needs -ms- */
    }
    .form__input:focus {
      outline: none;
      border-bottom: 3px solid #55c57a;
    }
    .form__input:focus:invalid {
      border-bottom: 3px solid #ff7730;
    }
    .form__input::-webkit-input-placeholder {
      color: #bbb;
    }

    .form__group:not(:last-child) {
      margin-bottom: 2.5rem;
    }
    .container__reset {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
      flex-direction: column;
      background-color: #36402c;
    }

    .container__reset-content {
      padding: 4rem;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    .container__reset-content > h2 {
      font-size: 5rem;
      color: white;
      text-transform: uppercase;
    }

    .container__reset-content > h2 > span {
      color: #98b66e;
    }
    .container__reset-content > p {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: white;
    }

    button {
      cursor: pointer;
      border-radius: 20px;
      border: 1px solid #98b66e;
      background-color: #98b66e;
      color: #ffffff;
      font-size: 12px;
      font-weight: bold;
      padding: 12px 45px;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: transform 80ms ease-in;
      width: auto;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: right;
    }

    .form__input {
      width: 35rem;
      margin-bottom: 2rem;
    }

block content
  .container__reset
    .container__reset-content
      h2.heading-secondary Resetujte
        |
        |
        span lozinku
      p Ovde upisite novu lozinku a zatim je potvrdite.
      form#form-resetPassword
        input#resetPassword.form__input(
          type='password',
          placeholder='Nova lozinka',
          aria-label='password'
        )
        input#resetPasswordConfirm.form__input(
          type='password',
          placeholder='Potvrdite novu lozinku',
          aria-label='passwordConfirm'
        )
        button Promeni lozinku
