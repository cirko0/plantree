          img(src='/img/arrow-left.svg', alt='Arrow-left icon')
        .user-view__form-container
          h2.heading-secondary.ma-bt-md Podesi nalog

          //- WITHOUT API
          //- form.form.form-user-data(action='/submit-user-data' method='POST')

          //- WITH API
          form#form-update.form.form-user-data(enctype='multipart/form-data')
            .form__group
              label.form__label(for='name') Ime
              input#name.form__input(
                type='text',
                value=`${user.name}`,
                required,
                name='name'
              )
            .form__group.ma-bt-md
              label.form__label(for='email') Mail adresa
              input#email.form__input(
                type='email',
                value=`${user.email}`,
                required,
                name='email'
              )
            .form__group.form__photo-upload
              img.form__user-photo(src=`/img/${user.photo}`, alt='User photo')
              input(
                type='file',
                name='photo',
                accept='image/*',
                aria-label='Image'
              )
            .form__group.right
              button.button__me Sačuvaj podešavanja

        .line &nbsp;

        .user-view__form-container
          h2.heading-secondary.ma-bt-md Promeni lozinku
          form#form-updatePassword.form.form-user-password
            .form__group
              label.form__label(for='password-current') Trenutna lozinka
              input#password-current.form__input(
                type='password',
                placeholder='••••••••',
                required,
                minlength='8'
              )
            .form__group
              label.form__label(for='password') Nova lozinka
              input#password.form__input(
                type='password',
                placeholder='••••••••',
                required,
                minlength='8'
              )
            .form__group.ma-bt-lg
              label.form__label(for='password-confirm') Potvrdi lozinku
              input#password-confirm.form__input(
                type='password',
                placeholder='••••••••',
                required,
                minlength='8'
              )
            .form__group.right
              button.btn--save-password.button__me Sačuvaj lozinku
        .btn__container
          button#logOutBtn.header-button
